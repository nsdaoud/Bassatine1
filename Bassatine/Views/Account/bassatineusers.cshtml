
@{
    ViewBag.Title = "bassatineusers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb-->
<ul class="breadcrumb breadcrumb-page">
    <div class="breadcrumb-label text-light-gray">You are here: </div>
    <li><a href="/">Home</a></li>
    <li class="active">Users/Vendors</li>
</ul>

<!-- Header -->
<div class="page-header">
    <div class="row">
        <h1 class="col-xs-8 text-center text-left-sm"><i class="fa fa-sun-o page-header-icon"></i>&nbsp;&nbsp;List Of Employees</h1>
        <div class="col-xs-4"><a href="/Account/Register" class="quick-launch" title="New User">Create New User&nbsp&nbsp<i class="fa fa-plus-circle page-header-icon"></i></a></div>
    </div>
</div>

<!-- Body -->
<div class="row" ng-app="bassatineApp" ng-controller="bassatineusersController">
    <form class="panel form-horizontal">
        <div class="col-sm-12">
            <div class="panel form-horizontal">
                <div class="panel-heading">
                    <span class="panel-title">Bassatine Users<span style="float:right"></span></span>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-sm-12">
                          
                            <table class="table ">
                                <thead>
                                    <tr>
                                        <th>Email</th>
                                        <th>VendorCode</th>
                                        <th>Is Admin</th>
                                        <th>Active</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="users in bassatineusers">
                                        <td><span>{{users.Email}}</span></td>
                                        <td><span>{{users.VendorCode}}</span></td>
                                        <td> <input type="checkbox" ng-disabled="true" style="text-align:center; vertical-align: middle;" ng-checked="{{users.userisAdmin}}"></td>
                                        <td> <input type="checkbox" ng-disabled="true" style="text-align:center; vertical-align: middle;" ng-checked="{{users.isActive}}"></td>

                                        <td><a href="#" ng-click="edit($index)" data-toggle="modal" data-target="#edituser">Edit</a></td>
                                    </tr>
                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
    <div id="edituser" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="panel-title">Manage User Info</span>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    @*<img class="btn-close" data-dismiss="modal" src="/Content/images/plugins/bootstrap-editable/close.png" />*@
                </div>
                <div class="modal-body">
                    <form class="panel-body">
                        <fieldset>
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label for="input-Default" class="col-sm-2 control-label">Email</label>
                                    <div class="col-sm-10"><input type="text" ng-model="databassatineusers.Email" class="form-control" required /></div>
                                </div>
                                <div class="form-group">
                                    <label for="input-Default" class="col-sm-2 control-label">Vendor Code</label>
                                    <div class="col-sm-10"><input type="text" ng-model="databassatineusers.VendorCode" class="form-control" required /></div>
                                </div>

                                <div class="form-group">
                                    <label for="input-Default" class="col-sm-2 control-label">Highlighted</label>
                                    <div class="col-sm-10"><input type="checkbox" ng-model="databassatineusers.userisAdmin" class="px" /></div>
                                </div>

                                <div class="form-group">
                                    <label for="input-Default" class="col-sm-2 control-label">Active</label>
                                    <div class="col-sm-10"><input type="checkbox" ng-model="databassatineusers.isActive" class="px" /></div>
                                </div>

                                <input type="submit" value="Add" ng-click="Update()" class="btn btn-primary" />
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>


