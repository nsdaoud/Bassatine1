@{
    ViewBag.Title = "Reset password confirmation";
    Layout = null;
}

<script src="/Content/javascripts/jquery.min.js"></script>
<script src="/Content/javascripts/bootstrap.min.js"></script>
<link href="/Content/stylesheets/bootstrap.min.css" rel="stylesheet" />
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<div>
    <p>
        Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </p>
</div>
